<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.madlibs.StoryActivity"
    tools:ignore="MergeRootFrame" 
    android:background="@color/background_color" >

   <fragment
       android:id="@+id/storyFragment"
       android:name="project.madlibs.StoryFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="12dp"
       tools:layout="@layout/story_fragment" />

   <fragment
       android:id="@+id/formFragment"
       android:name="project.madlibs.FormFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/storyFragment"
       android:layout_alignLeft="@+id/storyFragment"
       tools:layout="@layout/form_fragment" />

   <fragment
       android:id="@+id/storyDirectionsFragment"
       android:name="project.madlibs.StoryDirectionsFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="21dp"
       tools:layout="@layout/story_directions_fragment" />

</RelativeLayout>

